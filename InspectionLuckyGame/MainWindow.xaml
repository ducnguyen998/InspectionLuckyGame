<Window x:Class="InspectionLuckyGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InspectionLuckyGame"
        xmlns:bar="clr-namespace:InspectionLuckyGame.UI.Bars"
        xmlns:layout="clr-namespace:InspectionLuckyGame.Navigation.Layout"
        mc:Ignorable="d"
        WindowStyle="None" WindowState="Maximized"
        Title="MainWindow">
    <Border Background="#710000" CornerRadius="5">
        <ContentPresenter Content="{Binding CurrentViewmodel}">
            <ContentPresenter.Resources>
                <DataTemplate DataType="{x:Type bar:TopBarViewmodel}">
                    <bar:TopBar/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type bar:NavigationBarViewmodel}">
                    <bar:NavigationBar/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type layout:MainWindowLayoutViewmodel}">
                    <layout:MainWindowLayout/>
                </DataTemplate>
            </ContentPresenter.Resources>
        </ContentPresenter>
    </Border>
</Window>
