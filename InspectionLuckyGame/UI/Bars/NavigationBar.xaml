<UserControl x:Class="InspectionLuckyGame.UI.Bars.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InspectionLuckyGame.UI.Bars"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="RadioButton" BasedOn="{StaticResource MaterialDesignFlatDarkButton}">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.Primary.Dark.Foreground}"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" Value="Red"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical" 
                Background="#cf000000" 
                Width="250">
        <RadioButton Command="{Binding NavigateHome}" Margin="0,110,0,0">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="HomeOutline" Width="22" Height="22"/>
                <TextBlock VerticalAlignment="Center" Margin="10,0,0,0">Trang chủ</TextBlock>
            </StackPanel>
        </RadioButton>
        <RadioButton Command="{Binding NavigatePrizeConsolationFoam}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Numeric4BoxMultipleOutline" Width="22" Height="22"/>
                <TextBlock VerticalAlignment="Center" Margin="10,0,0,0">Giải Khuyến Khích 1</TextBlock>
            </StackPanel>
        </RadioButton>
        <RadioButton Command="{Binding NavigatePrizeConsolationHairDryer}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Numeric4BoxMultipleOutline" Width="22" Height="22"/>
                <TextBlock VerticalAlignment="Center" Margin="10,0,0,0">Giải Khuyến Khích 2</TextBlock>
            </StackPanel>
        </RadioButton>
        <RadioButton Command="{Binding NavigatePrizeThirdHeater}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Numeric3BoxOutline" Width="22" Height="22"/>
                <TextBlock VerticalAlignment="Center" Margin="10,0,0,0">Giải Ba</TextBlock>
            </StackPanel>
        </RadioButton>
        <RadioButton Command="{Binding NavigatePrizeSecondSmartWatch}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Numeric2BoxOutline" Width="22" Height="22"/>
                <TextBlock VerticalAlignment="Center" Margin="10,0,0,0">Giải Nhì</TextBlock>
            </StackPanel>
        </RadioButton>
        <RadioButton Command="{Binding NavigatePrizeFirstRobotCleaner}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Numeric1BoxOutline" Width="22" Height="22"/>
                <TextBlock VerticalAlignment="Center" Margin="10,0,0,0">Giải Nhất</TextBlock>
            </StackPanel>
        </RadioButton>
        <RadioButton Command="{Binding NavigateWinner}">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="StackOverflow" Width="22" Height="22"/>
                <TextBlock VerticalAlignment="Center" Margin="10,0,0,0">Tổng kết</TextBlock>
            </StackPanel>
        </RadioButton>
    </StackPanel>
</UserControl>
