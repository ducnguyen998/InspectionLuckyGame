<UserControl x:Class="InspectionLuckyGame.UI.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InspectionLuckyGame.UI.View"
             mc:Ignorable="d" Background="#710000"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Source="{Binding BackgroundHome}" Stretch="Uniform" x:Name="BG"></Image>
        <Grid Width="{Binding ElementName=BG, Path=Width}" Height="{Binding ElementName=BG, Path=Height}" Background="#20000000">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock Style="{StaticResource MaterialDesignHeadline3TextBlock}" Foreground="White" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="40"
                           >Bộ phận Inspection Innovation 1</TextBlock>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
