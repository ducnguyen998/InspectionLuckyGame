<UserControl x:Class="InspectionLuckyGame.UI.View.WinnerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InspectionLuckyGame.UI.View"
             xmlns:converter="clr-namespace:InspectionLuckyGame.Converters"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <converter:PrizeUniqueToBrushConverter x:Key="colorCvt"/>
    </UserControl.Resources>
    <Grid>
        <TabControl Width="1870" Height="960" 
                    Margin="0,60,0,0"
                    Style="{StaticResource MaterialDesignFilledTabControl}">
            <TabItem Header="Danh sách trúng giải">
                <Border Background="AliceBlue" Padding="20">
                    <ScrollViewer>
                        <ItemsControl Grid.IsSharedSizeScope="True" ItemsSource="{Binding WinnerCollection}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        x:Name="Border" 
                                        Padding="8"
                                        BorderBrush="{DynamicResource MaterialDesignDivider}"
                                        BorderThickness="1"
                                        Height="95" Margin="20,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition SharedSizeGroup="Checkerz" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel
                                                    Grid.Column="0"
                                                    Margin="0,0,0,0">
                                                <TextBlock
                                                    FontWeight="Bold" FontSize="26"
                                                    Text="{Binding FullName}"  HorizontalAlignment="Right"/>
                                                <TextBlock
                                                    Text="{Binding GenID}" FontSize="24" HorizontalAlignment="Right"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal"
                                                        Grid.Column="1"
                                                        Margin="8,0,0,0">
                                                <Separator Width="50" Margin="10,10" 
                                                           VerticalAlignment="Top"
                                                           BorderThickness="1" BorderBrush="Gray">
                                                    <Separator.LayoutTransform>
                                                        <RotateTransform Angle="90" />
                                                    </Separator.LayoutTransform>
                                                </Separator>
                                                <TextBlock Text="{Binding Prize.Name}" Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                                           Margin="0,20,0,0"
                                                           ></TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"></UniformGrid>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </TabItem>
            <TabItem Header="Danh sách còn lại">
                <Border Background="AliceBlue" Padding="20">
                    <ScrollViewer>
                        <ItemsControl Grid.IsSharedSizeScope="True" ItemsSource="{Binding RemainingEmployeeList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        x:Name="Border"
                                        Padding="8"
                                        BorderBrush="{DynamicResource MaterialDesignDivider}"
                                        BorderThickness="1"
                                        Height="95" Margin="20,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition SharedSizeGroup="Checkerz" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel
                                                Grid.Column="0"
                                                Margin="0,0,0,0">
                                                <TextBlock
                                                    FontWeight="Bold" FontSize="26"
                                                    Text="{Binding FullName}"  HorizontalAlignment="Right"/>
                                                <TextBlock
                                                    Text="{Binding GenID}" FontSize="24" HorizontalAlignment="Right"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal"
                                        Grid.Column="1"
                                        Margin="8,0,0,0">
                                                <Separator Width="50" Margin="10,10" 
                                           VerticalAlignment="Top"
                                           BorderThickness="1" BorderBrush="Gray">
                                                    <Separator.LayoutTransform>
                                                        <RotateTransform Angle="90" />
                                                    </Separator.LayoutTransform>
                                                </Separator>
                                                <TextBlock Text="" Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                           Margin="0,20,0,0"
                                           ></TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"></UniformGrid>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </TabItem>
        </TabControl>  
    </Grid>
</UserControl>
